EMAIL_USER=your_gmail_username@gmail.com
EMAIL_PASS=your_gmail_app_password
# Optional (recommended for non-Gmail / production):
# EMAIL_HOST=smtp.yourprovider.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_SERVICE= (example: gmail)  # if you prefer service-based config
# EMAIL_FROM=no-reply@powerpolysupplies.com  # overrides sender address (must be verified with your email provider)
# Optional timeouts (ms)
# EMAIL_VERIFY_TIMEOUT_MS=25000
# EMAIL_SEND_TIMEOUT_MS=25000

# If Gmail SMTP is blocked by your host, you can use SendGrid API fallback:
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM=no-reply@powerpolysupplies.com  # must be a verified sender/domain in SendGrid
ORDER_TO=orders@powerpolysupplies.com
COMPANY_NAME=Power Poly Supplies
COMPANY_SLOGAN=Premium garment packaging and hanger supplies.
COMPANY_EMAIL=support@powerpolysupplies.com
COMPANY_ADDRESS=47 Queen Isabella Crescent, Maple, L6A 3J8, Canada
COMPANY_LOGO_PATH=../frontend/assets/logo.jpg

# =========================
# Square Payments
# =========================
SQUARE_ENV=sandbox
SQUARE_ACCESS_TOKEN=YOUR_SQUARE_ACCESS_TOKEN
SQUARE_LOCATION_ID=YOUR_SQUARE_LOCATION_ID
#
# Optional (recommended): separate credentials per environment.
# If set, these override the generic vars above for that env.
# SQUARE_ACCESS_TOKEN_SANDBOX=YOUR_SANDBOX_ACCESS_TOKEN
# SQUARE_LOCATION_ID_SANDBOX=YOUR_SANDBOX_LOCATION_ID
# SQUARE_ACCESS_TOKEN_PROD=YOUR_PRODUCTION_ACCESS_TOKEN
# SQUARE_LOCATION_ID_PROD=YOUR_PRODUCTION_LOCATION_ID
#
# Webhook signature verification (recommended):
# - Configure this endpoint in Square dashboard and set the exact public URL below.
# SQUARE_WEBHOOK_SIGNATURE_KEY=YOUR_SQUARE_WEBHOOK_SIGNATURE_KEY
# SQUARE_WEBHOOK_URL=https://your-backend.example.com/api/square/webhook

# If your frontend uses Square Web Payments SDK
SQUARE_APPLICATION_ID=YOUR_SQUARE_APPLICATION_ID

SITE_URL=https://your-frontend-url

# =========================
# OAuth sign-in (optional)
# =========================
# Used by the frontend buttons "Continue with Google/Facebook" on /login.html.
# Notes:
# - Redirect URIs should point to your BACKEND callback endpoints (not the frontend):
#     http://127.0.0.1:5000/api/auth/oauth/google/callback
#     http://127.0.0.1:5000/api/auth/oauth/facebook/callback
# - If you deploy frontend+backend under the same origin, the defaults may work without the *_REDIRECT_URI overrides.
# - OAuth callbacks require Supabase configured (see SUPABASE_* below) to create/lookup users.
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
# OAUTH_GOOGLE_REDIRECT_URI=
OAUTH_FACEBOOK_APP_ID=
OAUTH_FACEBOOK_APP_SECRET=
# OAUTH_FACEBOOK_REDIRECT_URI=

# CORS allowlist (comma-separated origins). Defaults to SITE_URL + local dev origins.
# CORS_ORIGINS=https://powerpolysupplies.com,https://www.powerpolysupplies.com

# =========================
# QuickBooks Online (optional)
# =========================
# Enable QuickBooks by creating an Intuit app and setting these values.
# QBO_REDIRECT_URI should point to your backend callback route:
#   https://your-backend-url/api/qbo/callback
QBO_ENV=sandbox
QBO_CLIENT_ID=YOUR_QBO_CLIENT_ID
QBO_CLIENT_SECRET=YOUR_QBO_CLIENT_SECRET
QBO_REDIRECT_URI=https://your-backend-url/api/qbo/callback
# Used to protect the OAuth "state" parameter (required).
QBO_STATE_SECRET=change_me_long_random_string
# Item IDs (required: default item; optional: shipping/tax items)
QBO_DEFAULT_ITEM_ID=YOUR_QBO_ITEM_ID
QBO_SHIPPING_ITEM_ID=
QBO_TAX_ITEM_ID=
# Tax sync strategy:
#   line = include tax as a line item (simple, totals match; may not post to tax liability)
#   qbo  = rely on QBO tax (requires QBO_TAX_CODE_ID configured in your QBO)
#   none = no tax in QBO invoice
QBO_SYNC_TAX_MODE=line
QBO_TAX_CODE_ID=
# If true, QuickBooks emails the invoice automatically after sync.
QBO_EMAIL_INVOICE=false

# Optional admin protection for /api/admin/* endpoints (recommended)
# ADMIN_TOKEN=your_long_random_admin_token

SUPABASE_URL=https://yourproject.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Google reCAPTCHA (keep this secret on the backend only)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Google Sheets sync (service account)
GOOGLE_SHEET_ID=your_google_sheet_id
GOOGLE_SHEET_ORDERS_TAB=Orders
GOOGLE_SHEET_MESSAGES_TAB=Messages
# Provide one of the following:
# GOOGLE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}
# GOOGLE_SERVICE_ACCOUNT_FILE=path/to/service-account.json

# Optional: PORT/HOST for the server
# PORT=5000
# HOST=0.0.0.0
GOOGLE_SHEET_PRODUCTS_TAB=Products
GOOGLE_SHEET_REVIEWS_TAB=Reviews
GOOGLE_SHEET_FEEDBACK_TAB=Feedback
